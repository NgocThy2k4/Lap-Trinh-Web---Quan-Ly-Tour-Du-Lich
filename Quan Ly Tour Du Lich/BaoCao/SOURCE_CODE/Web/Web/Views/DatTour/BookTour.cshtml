@model Web.Models.DatTour

@{
    ViewBag.Title = "BookTour";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>BookTour</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Thông tin Đặt tour</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })




            <div class="form-group">
                @Html.LabelFor(model => model.SLNguoiLon, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SLNguoiLon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SLNguoiLon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SLTreEm, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SLTreEm, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SLTreEm, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" id="@Session["MaHopDong"]" value="Tiếp tục" class="btn btn-default" />
                    
                </div>
                @if (ViewBag.MaDatTour != null)
                {
                    <p style="color: red;">@ViewBag.MaDatTour</p>
                }
            </div>
        </div>
    }

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</div>