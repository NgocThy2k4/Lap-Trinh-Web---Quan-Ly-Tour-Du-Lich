

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link href="~/Assets/signup/style.css" rel="stylesheet" />
</head>
<body>

    <div class="container-fluid register">
        <div class="row">
            <div class="col-md-3 register-left">
                
                <h3>Xin Chào bạn </h3>
                <p>Bạn đã có tài khoản ? </p>
                <a class="btn btn-outline-light btn-social" href="@Url.Content("/Login/Create/")">Đăng Nhập</a>
            </div>
            <div class="col-md-9 register-right">
            
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Đăng Ký</h3>
                        <form action="#!" method="post">
                            <div class="row register-form">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="text" class="form-control" name="name" id="name" required placeholder="Họ Và Tên *" />
                                    </div>
                                 
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="password" id="password" required placeholder="Password *" value="" />
                                    </div>
                                    @if (ViewBag.sosanh != null)
                                    {
                                        <p style="color: red;">@ViewBag.sosanh</p>
                                    }
                                  
                                    <div class="form-group">
                                        <input type="password" class="form-control" name="repassword" id="repassword" required placeholder="Confirm Password *" value="" />
                                    </div>
                                    @if (ViewBag.sosanh != null)
                                    {
                                        <p style="color: red;">@ViewBag.sosanh</p>
                                    }  
                                  
                            

                                </div>
                               

                                    <input type="submit" class="btnRegister" value="Register" />
                                </div>
                            </div>
                        </form>
                      
                    </div>
               
                </div>
            </div>
        </div>

    </div>
</body>
</html>