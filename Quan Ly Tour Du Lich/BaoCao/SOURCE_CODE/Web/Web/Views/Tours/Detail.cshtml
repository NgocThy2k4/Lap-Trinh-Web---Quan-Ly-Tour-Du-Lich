@model Web.Models.Tour

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container-fluid bg-primary py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row justify-content-center py-5">
            <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Enjoy Your Vacation With Us</h1>
                <p class="fs-4 text-white mb-4 animated slideInDown">Tempor erat elitr rebum at clita diam amet diam et eos erat ipsum lorem sit</p>
                <form class="position-relative w-75 mx-auto animated slideInDown" action="/Tours/Index">
                    <input class="form-control border-0 rounded-pill w-100 py-3 ps-4 pe-5" type="search" id="search" name="search" placeholder="Eg: Hạ Long " value="@ViewBag.Search">
                    <button type="submit" class="btn btn-primary rounded-pill py-2 px-4 position-absolute top-0 end-0 me-2" style="margin-top: 7px;">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>



<!-- Booking Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container-fluid">
        <div class="booking p-5">
            <div class="row g-5 align-items-center flex-row">
                <h2 style="align-content:center;" class="text-white">@Model.TenTour</h2>
                <div class="tour-details col-md-6 text-white">

                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Hinh1.ToArray())" alt="Hình 1" style="width: 400px;">






                </div>
                <div class="tour-details col-md-6 text-white">

                    <p>@Model.MoTa</p>
                    <div class="flex-column">
                        <div>Ngày Đi: @Html.DisplayFor(model => model.NgayDi)</div>

                        <div>Ngày Về: @Html.DisplayNameFor(model => model.NgayVe)</div>
                        <div>Số ghế: @Html.DisplayNameFor(model => model.SoGhe)</div>
                        <div>
                            Điểm khởi hành: @Html.DisplayFor(model => model.DiemKhoiHanh)
                        </div>
                        <div>
                            Chỗ đã đặt: @Html.DisplayFor(model => model.SoNguoiDat)
                        </div>
                        <div>Giá: @Html.DisplayFor(model => model.Gia)/Người</div>
                        <div>
                            Giờ khởi hành: @Html.DisplayFor(model => model.GioKhoiHanh)
                        </div>


                    </div>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>



                </div>
                <a href="@Url.Action("XacNhanDatTour", "DatTour")" class="btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Book Now</a>

            </div>

            <!-- Booking Start -->
        </div>
    </div>
</div>